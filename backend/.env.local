# Flask config
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Application
APP_NAME=LuckyKangaroo
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+psycopg://lk:lkpass@localhost:5432/lucky_kangaroo
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SOCKETIO_DB=3

# Search
SEARCH_URL=http://localhost:9200
SEARCH_INDEX_PREFIX=luckykangaroo

# JWT
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days
JWT_BLACKLIST_ENABLED=True
JWT_BLACKLIST_TOKEN_CHECKS=access,refresh

# Email (configuration pour MailHog en développement)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=dev@luckykangaroo.local
MAIL_DEBUG=True

# File Uploads
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,webp
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=./uploads

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLIC_KEY=pk_test_...

# OpenAI (pour les fonctionnalités IA)
OPENAI_API_KEY=sk-...

# Sentry (surveillance des erreurs)
SENTRY_DSN=

# Google Maps (pour la géolocalisation)
GOOGLE_MAPS_API_KEY=

# Configuration CORS (sécurité)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuration pour les tests
TESTING=False
TEST_DATABASE_URL=postgresql+psycopg://test:test@localhost:5432/test_lucky_kangaroo

# Configuration du taux limite (rate limiting)
RATELIMIT_DEFAULT=200 per day;50 per hour
RATELIMIT_API=1000 per day;100 per hour

# Configuration du cache
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# Configuration des logs
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
