# Flask config
FLASK_ENV=development
SECRET_KEY=change-me-this-should-be-a-very-secret-key
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Application
APP_NAME=LuckyKangaroo
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+psycopg://lk:lkpass@host.docker.internal:5432/lucky_kangaroo
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://host.docker.internal:6379
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SOCKETIO_DB=3

# Search
SEARCH_URL=http://host.docker.internal:9200
SEARCH_INDEX_PREFIX=luckykangaroo

# JWT
JWT_SECRET_KEY=change-me-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_TOKEN_CHECKS=access,refresh

# Email
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=no-reply@luckykangaroo.com
MAIL_DEBUG=false

# File Uploads
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif
# MAX_CONTENT_LENGTH is already defined above (deduplicated)
# UPLOAD_FOLDER is already defined above (deduplicated)

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
DEFAULT_CURRENCY=CHF

# OpenAI (AI Features)
OPENAI_API_KEY=sk-...
OPENAI_ORGANIZATION=org-...

# Rate Limiting
RATELIMIT_DEFAULT=200 per hour
RATELIMIT_STORAGE_URI=redis://host.docker.internal:6379/0
RATELIMIT_STRATEGY=fixed-window

# CORS
CORS_ORIGINS=http://localhost:8081,http://127.0.0.1:8081,http://localhost:3000,http://127.0.0.1:3000
CORS_SUPPORTS_CREDENTIALS=true

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_GAMIFICATION_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# Security
SECURITY_PASSWORD_SALT=change-me-salt-value
SECURITY_CONFIRMABLE=true
SECURITY_RECOVERABLE=true
SECURITY_TRACKABLE=true

# Performance
SQLALCHEMY_ECHO=False
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Session
SESSION_TYPE=redis
SESSION_REDIS=redis://host.docker.internal:6379/0
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# Cache
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=redis://host.docker.internal:6379/1
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes

# Celery
CELERY_BROKER_URL=redis://host.docker.internal:6379/2
CELERY_RESULT_BACKEND=redis://host.docker.internal:6379/2
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# WebSockets
SOCKETIO_MESSAGE_QUEUE=redis://host.docker.internal:6379/3

# External Services
GOOGLE_MAPS_API_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=

# Development
DEBUG=True
TESTING=False
